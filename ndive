#!/usr/bin/env -S uv run --script
# /// script
# dependencies = [
#   "blessed>=1.20.0",
# ]
# ///
"""
Neural Dive - Cyberpunk Terminal Roguelike

A terminal-based game where you descend through neural layers, answering
computer science questions and battling AI entities.

Quick Start:
  ndive              Play with default settings
  ndive --light      Play with light terminal background
  ndive --classic    Play with ASCII-only graphics
  ndive --help       Show all options
"""

import sys
import os

# Add parent directory to path for development
sys.path.insert(0, os.path.dirname(os.path.abspath(__file__)))

from neural_dive.__main__ import main

if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        print("\n\nGame interrupted. Thanks for playing Neural Dive!")
        sys.exit(0)
    except Exception as e:
        print(f"\n\nError: {e}")
        print("\nIf this is a bug, please report it at:")
        print("https://github.com/yourusername/neural-dive/issues")
        sys.exit(1)
